@page
@model Northwind.Pages.Categories.AddModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add a New Category</h1> <!-- The title of the page :3-->

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!--we ispect the data to prevent errors-->
            <div class="form-group">
                <label asp-for="categories.CategoryName" class="control-label"></label>  <!--We only get 2 values :/-->
                <input asp-for="categories.CategoryName" class="form-control" />
                <span asp-validation-for="categories.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="categories.Description" class="control-label"></label>
                <input asp-for="categories.Description" class="form-control" />
                <span asp-validation-for="categories.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> <!--The button to submit the new category-->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Go back</a> <!--Go back to the main page-->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}